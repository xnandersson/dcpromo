#!/bin/bash
samba-tool domain provision \
  --domain=<%= @domain %> \
  --realm=<%= @realm %> \
  --host-name=<%= @host_name %> \
  --adminpass=<%= @adminpass %> \
  --dnspass=<%= @dnspass %> \
  --krbtgtpass=<%= @krbtgtpass %> \
  --machinepass=<%= @machinepass %> \
  --root=<%= @root %> \
  --users=<%= @users %> \
  --nobody=<%= @nobody %> \
  --server-role=<%= @server_role %> \
<% if @use_rfc2307 == "true" -%>
  --use-rfc2307 \
<% end -%>
  --dns-backend=<%= @dns_backend %> \
  --use-ntvfs
